spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      routes:
        - id: advisory-admin-service
          uri: lb://ADVISORY-ADMIN-SERVICE
          predicates:
            - Path=/admin/**
          filters:
            - StripPrefix=1

        - id: email-notification-service
          uri: lb://EMAIL-NOTIFICATION-SERVICE
          predicates:
            - Path=/email/**
          filters:
            - StripPrefix=1

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka
